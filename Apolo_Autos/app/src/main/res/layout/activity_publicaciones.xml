<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellow_background"
    tools:context=".publicaciones">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="339dp"
        android:layout_height="503dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.89">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="349dp"
            android:layout_height="494dp">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="278dp"
                android:layout_height="225dp"
                android:orientation="vertical"
                android:padding="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.086">

                <EditText
                    android:id="@+id/pa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Patente"
                    android:inputType="textPersonName"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/ti"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="ingrese Titulo"
                    android:inputType="textPersonName"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Tipo Vehiculo"
                    android:inputType="textPersonName"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/rows"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Filas del vehiculo"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="241dp"
                android:layout_height="207dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:layout_constraintVertical_bias="0.289">


                <Button
                    android:id="@+id/login"
                    android:layout_width="217dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:onClick="guardarClases"
                    android:text="AÃ±adir Vehiculo"
                    app:cardCornerRadius="25dp"
                    app:cornerRadius="25dp" />

                <Button
                    android:id="@+id/login2"
                    android:layout_width="216dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:onClick="mostrarPublicaciones"
                    android:text="Mostrar Vehiculo"
                    app:cardCornerRadius="25dp"
                    app:cornerRadius="25dp" />

                <Button
                    android:id="@+id/login4"
                    android:layout_width="217dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:onClick="ActualizarVehiculo"
                    android:text="Actualizar vehiculo"
                    app:cardCornerRadius="25dp"
                    app:cornerRadius="25dp" />

                <Button
                    android:id="@+id/login7"
                    android:layout_width="215dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:onClick="EliminarVehiculo"
                    android:text="Eliminar vehiculo"
                    app:cardCornerRadius="25dp"
                    app:cornerRadius="25dp" />


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="352dp"
        android:layout_height="122dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="136dp"
                android:layout_height="86dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.009"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.38"
                app:srcCompat="@drawable/auto" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="205dp"
                android:layout_height="108dp"
                android:text="En esta seccion se podra hacer publicaciones de vehiculos y buscar las patentes de vehiculos, como tambien actualizar o eliminar un vehiculo ya publicado."
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.909"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>